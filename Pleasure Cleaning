    <script>
        // Demo data
        const appointments = {
            "client@email.com": {
                name: "Sarah Johnson",
                address: "12 Queen Street, Auckland",
                date: "2023-10-15",
                time: "14:00",
                status: "pending"
            },
            "123456": {
                name: "Michael Brown",
                address: "24 Victoria Road, Wellington",
                date: "2023-10-16",
                time: "10:00",
                status: "confirmed"
            }
        };
        
        // Available time slots
        const availableTimes = ["08:00", "10:00", "12:00", "14:00", "16:00"];
        
        let selectedDate = null;
        let selectedTime = null;
        let currentAppointment = null;
        
        function checkAppointment() {
            const email = document.getElementById('client-email').value;
            
            if (appointments[email]) {
                currentAppointment = appointments[email];
                document.getElementById('client-name').textContent = currentAppointment.name;
                document.getElementById('client-address').textContent = currentAppointment.address;
                document.getElementById('current-date').textContent = formatDate(currentAppointment.date);
                document.getElementById('current-time').textContent = currentAppointment.time;
                
                const statusElement = document.getElementById('current-status');
                statusElement.textContent = currentAppointment.status === 'pending' ? 'Pending' : 'Confirmed';
                statusElement.className = 'status-badge ' + (currentAppointment.status === 'pending' ? 'status-pending' : 'status-confirmed');
                
                document.getElementById('login-section').classList.add('hidden');
                document.getElementById('appointment-details').classList.remove('hidden');
            } else {
                alert("Booking not found. Please check your email or booking code.");
            }
        }
        
        function confirmAppointment() {
            // In a real app, this would update the database
            currentAppointment.status = 'confirmed';
            const statusElement = document.getElementById('current-status');
            statusElement.textContent = 'Confirmed';
            statusElement.className = 'status-badge status-confirmed';
            
            // Show confirmation
            document.getElementById('new-date').textContent = formatDate(currentAppointment.date);
            document.getElementById('new-time').textContent = currentAppointment.time;
            
            document.getElementById('appointment-details').classList.add('hidden');
            document.getElementById('confirmation-section').classList.remove('hidden');
            
            // Simulate notification
            setTimeout(() => {
                alert("📧 Email and SMS confirmation sent!");
            }, 1000);
        }
        
        function showReschedule() {
            document.getElementById('appointment-details').classList.add('hidden');
            document.getElementById('reschedule-section').classList.remove('hidden');
        }
        
        function confirmReschedule() {
            if (!selectedDate || !selectedTime) {
                alert("Please select both a date and time slot.");
                return;
            }
            
            // In a real app, this would update the database
            currentAppointment.date = selectedDate;
            currentAppointment.time = selectedTime;
            
            document.getElementById('new-date').textContent = formatDate(selectedDate);
            document.getElementById('new-time').textContent = selectedTime;
            
            document.getElementById('reschedule-section').classList.add('hidden');
            document.getElementById('confirmation-section').classList.remove('hidden');
            
            // Simulate notification
            setTimeout(() => {
                alert("📧 Email and SMS rescheduling confirmation sent!");
            }, 1000);
        }
        
        function cancelReschedule() {
            document.getElementById('reschedule-section').classList.add('hidden');
            document.getElementById('appointment-details').classList.remove('hidden');
        }
        
        function showLogin() {
            document.getElementById('confirmation-section').classList.add('hidden');
            document.getElementById('reschedule-section').classList.add('hidden');
            document.getElementById('appointment-details').classList.add('hidden');
            document.getElementById('login-section').classList.remove('hidden');
            
            // Clear input field
            document.getElementById('client-email').value = "";
        }
        
        function formatDate(dateStr) {
            const [year, month, day] = dateStr.split('-');
            return `${day}/${month}/${year}`;
        }
        
        // Add interactivity to date/time elements
        document.querySelectorAll('.calendar-day.available').forEach(day => {
            day.addEventListener('click', function() {
                document.querySelectorAll('.calendar-day.selected').forEach(d => {
                    d.classList.remove('selected');
                });
                this.classList.add('selected');
                selectedDate = `2023-10-${this.textContent.padStart(2, '0')}`;
            });
        });
        
        document.querySelectorAll('.time-slot.available').forEach(slot => {
            slot.addEventListener('click', function() {
                document.querySelectorAll('.time-slot.selected').forEach(s => {
                    s.classList.remove('selected');
                });
                this.classList.add('selected');
                selectedTime = this.textContent;
            });
        });
        
        // Simulate tab functionality
        document.querySelectorAll('.tab-item').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.tab-item').forEach(t => {
                    t.classList.remove('active');
                });
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>
